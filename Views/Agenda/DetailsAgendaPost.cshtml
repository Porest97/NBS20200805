@model AgendaPost

@{
    ViewData["Title"] = "DetailsAgendaPost";
}

<div class="card">
    <div class="card-header">
        <h6>Agendapost: @Html.DisplayFor(model => model.Id)</h6>
        <h6>Skapad av: @Html.DisplayFor(model => model.Creator.UserName)</h6>
        <h6>Datum:  @Html.DisplayFor(model => model.DateAndTime)</h6>
    </div>

    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateAndTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateAndTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Creator)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Creator.UserName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <a class="btn btn-sm btn-success" asp-controller="Agenda" asp-action="EditAgendaPost" asp-route-id="@Model.Id">Edit</a>
        <a class="btn btn-sm btn-success" asp-controller="Agenda" asp-action="IndexSearchAgendaPosts">Back to Agenda</a>
    </div>
</div>
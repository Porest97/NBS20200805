@model TimeReport

@{
    ViewData["Title"] = "CreateTimeReport";
}

    <div class="card">        
        <div class="card-header">
            <h6>Create a new TimeReport</h6>
        </div>
        <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="TimeReportName" class="control-label"></label>
                        <input asp-for="TimeReportName" class="form-control" />
                        <span asp-validation-for="TimeReportName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateTimeCreated" class="control-label"></label>
                        <input asp-for="DateTimeCreated" class="form-control" />
                        <span asp-validation-for="DateTimeCreated" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateTimeFrom" class="control-label"></label>
                        <input asp-for="DateTimeFrom" class="form-control" />
                        <span asp-validation-for="DateTimeFrom" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateTimeTo" class="control-label"></label>
                        <input asp-for="DateTimeTo" class="form-control" />
                        <span asp-validation-for="DateTimeTo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ApplicationUserId" class="control-label"></label>
                        <select asp-for="ApplicationUserId" class="form-control" asp-items="ViewBag.ApplicationUserId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="PersonId" class="control-label"></label>
                        <select asp-for="PersonId" class="form-control" asp-items="ViewBag.PersonId"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-sm btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        </div>
        <div class="card-footer">
            <div>
                <a class="btn btn-sm btn-outline-success" asp-controller="Reports" asp-action="IndexSearch">Back to Time Reports </a>
                <a class="btn btn-sm btn-outline-success" asp-controller="Home" asp-action="Reports">Reports</a>
            </div>
        </div>
    </div>
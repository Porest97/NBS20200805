@model ImageModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card">
    <div class="card-header">
        <h6>@Html.DisplayFor(model => model.Title) Länkad till INC# @Html.DisplayFor(model => model.Incident.IncidentNumber)</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ImageId" />
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ImageName" />
                    </div>
                    <div class="form-group">
                        <label asp-for="IncidentId" class="control-label"></label>
                        <select asp-for="IncidentId" class="form-control" asp-items="ViewBag.IncidentId"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Spara" class="btn btn-sm btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        </div>
    <div class="card-footer">       
        <a class="btn btn-sm btn-outline-success" asp-action="IndexSearch">Till Blider</a>
    </div>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

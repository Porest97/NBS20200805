@model ImageModel

@{
    ViewData["Title"] = "Delete";
}

<div class="card">
    <div class="card-header">
        <h3>Vill du verkligen ta bort denna bild ?</h3>
    </div>

    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ImageName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ImageName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Incident)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Incident.IncidentNumber)
            </dd>
            <dt class="col-sm-2">
                Uppladdad Bild !
            </dt>
            <dd class="col-sm-10">
                <img src="@("~/Image/"+Model.ImageName)" asp-append-version="true" width="250px" height="250px" />
            </dd>
        </dl>
        </div>
    <div class="card-footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="ImageId" />
            <input type="submit" value="Ta Bort" class="btn btn-sm btn-outline-danger" />
            <a class="btn btn-sm btn-outline-success" asp-action="IndexSearch">Till Bilder</a>
        </form>
    </div>
</div>
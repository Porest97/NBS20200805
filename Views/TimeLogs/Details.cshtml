@model NBS.Models.DataModels.TimeLog

@{
    ViewData["Title"] = "DetailsTimeLog";
}

<div class="card">
    <div class="card-header">
        <h6>TimeLog @Html.DisplayFor(model => model.Id)</h6>
    </div>
   
<div class="card-body">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Creator)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Creator.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Incident)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Incident.IncidentNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateTimeStarted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateTimeStarted)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateTimeEnded)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateTimeEnded)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LogNotes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LogNotes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hours)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hours)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PriceHour)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PriceHour)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MtrCost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MtrCost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalCost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalCost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WLog)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WLog.WLNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TimeLogStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeLogStatus.TimeLogStatusName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsSelected)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsSelected)
        </dd>
    </dl>
</div>
    <div class="card-footer">
        <a class="btn btn-sm btn-success" asp-controller="TimeLogs" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a class="btn btn-sm btn-success" asp-controller="TimeLogs" asp-action="IndexSearch">Back to TimeLogs</a>
    </div>
</div>
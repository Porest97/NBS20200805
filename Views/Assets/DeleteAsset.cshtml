@model Asset

@{
    ViewData["Title"] = "Delete";
}

<div class="card">
    <div class="card-header">
        <h6>
            Delete Asset: @Html.DisplayFor(model => model.Site.NoSite)
            - @Html.DisplayFor(model => model.Name)
            - @Html.DisplayFor(model => model.SerialNumber) ?
        </h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Site)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Site.NoSite)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AssetStatus)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AssetStatus.AssetStatusName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AssetType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AssetType.AssetTypeName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Brand)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Brand.BrandName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MACAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MACAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Model)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Model)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SerialNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SerialNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Connectivity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Connectivity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LocalIP)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LocalIP)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ethernet1LLDP)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ethernet1LLDP)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ethernet1)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ethernet1)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RFConnectedDevs)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RFConnectedDevs)
            </dd>
        </dl>
        </div>
        <div class="card-footer">
            <form asp-action="DeleteAsset">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-sm btn-danger" />
                <a class="btn btn-sm btn-success" asp-action="ListAssets">Back to Assets</a>
            </form>
        </div>
    </div>
</div>
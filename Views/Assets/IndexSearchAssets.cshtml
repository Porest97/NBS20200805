@model IEnumerable<Asset>
@{
    ViewData["Title"] = "IndexSearchAPs";
}
<div class="card">
    <div class="card-header">
        <h6>Assets - All Assets -  Search</h6>
        <form asp-controller="Assets" asp-action="IndexSearchAssets">
            <p>
                Site#: <input type="text" name="SearchString">
                Type: <input type="text" name="SearchString1">
                Brand: <input type="text" name="SearchString2">
                Status: <input type="text" name="SearchString3">
                <input type="submit" value="Search" />
            </p>
        </form>
    </div>
    <div class="card-body">
        <table class="table table-responsive-sm table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Site)</th>


                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Brand)</th>

                    <th>@Html.DisplayNameFor(model => model.Model)</th>
                    <th>@Html.DisplayNameFor(model => model.MACAddress)</th>

                    <th>@Html.DisplayNameFor(model => model.Ethernet1LLDP)</th>
                    <th>@Html.DisplayNameFor(model => model.LocalIP)</th>                    
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderBy(a => a.Name))
                {
                    <tr>
                        <td> @Html.DisplayFor(modelItem => item.Site.NoSite)</td>

                        <td> @Html.DisplayFor(modelItem => item.Name)</td>
                        <td> @Html.DisplayFor(modelItem => item.Brand.BrandName)</td>

                        <td>@Html.DisplayFor(modelItem => item.Model)</td>
                        <td>@Html.DisplayFor(modelItem => item.MACAddress)</td>

                        <td>@Html.DisplayFor(modelItem => item.Ethernet1LLDP)</td>
                        <td>@Html.DisplayFor(modelItem => item.LocalIP)</td>                        
                        <td>
                            <a class="btn btn-sm btn-success" asp-controller="Assets" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-sm btn-success" asp-controller="Assets" asp-action="EditAsset" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-sm btn-danger" asp-controller="Assets" asp-action="DeleteAsset" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <a class="btn btn-sm btn-success" asp-controller="Assets" asp-action="ListAssets">Back to Assets</a>
    </div>
</div>
